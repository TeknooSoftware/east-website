<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/universal/User.mongodb.xml-->
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Teknoo\East\Website\Doctrine\Object\User" collection="users">
        <also-load-methods>
            <also-load-method method="migrateSalt" field="salt"/>
            <also-load-method method="migrateHash" field="password"/>
        </also-load-methods>
        <lifecycle-callbacks>
            <lifecycle-callback type="postLoad" method="postLoad"/>
        </lifecycle-callbacks>
    </document>
</doctrine-mongo-mapping>